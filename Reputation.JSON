{
    "$schema": "http://json-schema.org/schema",
    "title": "Reputation Infrastructure Schema",
    "description": "JSON Schema for the core reputation ledger for various sectors",
    "type": "object",
    "properties": {
        "entityType": {
            "type": "string",
            "enum": ["Provider", "Consumer", "Agent"]
        },
        "entityID": {
            "type": "string"
        },
        "rating" : {
          "type" : "object",
          "properties": {
            "totalRatingsScore": "number",
            "totalRatingCount" : "integer"
            
          },
            
        },
        "credentials" : {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "url": {
                  "type" : "string",
                  "format": "uri"
                }
                //Descriptor Object from Beckn 
              }
            }
            
            
                   
        },
        

        "reviews": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reviewer": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                }
              },
              "required": ["reviewer", "text"],
              "additionalProperties": false
            }
        },

        


    }
        
    }
}